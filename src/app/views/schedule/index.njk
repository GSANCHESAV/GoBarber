{% extends "_layouts/default.njk" %}

{% block body %}
  <div class="content">
    <strong>Seus agendamentos</strong>

    {% if appointments.length !== 0 %}
      <p>Veja seus agendamentos abaixo:</p>
    {% else %}
      <p>Nenhum agendamento programado.</p>
    {% endif %}

    <ul class="providers">
      {% for appointment in appointments %}
      <li class="provider">
        <div>
          <img src="/files/{{ appointment.user.avatar }}"/>
          <strong>{{ appointment.user.name }} <br> {{ appointment.date | date("HH:mm") }}</strong>
        </div>
      </li>
      {% endfor %}
    </ul>

    <a href="/app/dashboard" class="back-button">Pagina Inicial</a>
  </div>
{% endblock %}
